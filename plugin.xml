<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="tw.com.bais.payO"
    version="1.0">

    <name>PAY Player</name>
    <description>YunOS PAY Plugin</description>
    <license>pearl</license>
    <keywords>YunOS</keywords>
    <repo></repo>
    <issue></issue>

    <js-module src="www/yunospay.js" name="yunospay">
        <clobbers target="yunospay" />
    </js-module>
	
    <platform name="android">
    	
	<config-file target="AndroidManifest.xml" parent="/*">
		  <uses-permission android:name="android.permission.INTERNET" />
	</config-file>
    	
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="YunOSOrder">
                <param name="android-package" value="tw.com.bais.payO.YunOSOrder"/>
            </feature>
        </config-file>
        <source-file src="libs/android-support-v4.jar" target-dir="libs" />
        <source-file src="libs/YunPay.jar" target-dir="libs" />
        <source-file src="src/com/aliyun/pay/order/RSASign.java" target-dir="src" />
        <source-file src="src/com/aliyun/pay/order/YunOSOrderManager.java" target-dir="src" />
        <source-file src="src/com/yunos/pay/util/CommonUtil.java" target-dir="src" />
        <source-file src="src/com/yunos/pay/util/Config.java" target-dir="src" />
        <source-file src="src/com/yunos/pay/util/RSAUtils.java" target-dir="src" />
    </platform>

</plugin>
