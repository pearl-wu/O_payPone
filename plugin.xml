<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="com.yunos.paydemo"
    version="1.0">

    <name>PAY Player</name>
    <description>YunOS PAY Plugin</description>
    <license>pearl</license>
    <keywords>YunOS</keywords>
    <repo>https://github.com/pearl-wu/O_payPone.git</repo>
    <issue>https://github.com/pearl-wu/O_payPone.git</issue>

    <js-module src="www/yunospay.js" name="YunosPay">
        <clobbers target="YunosPay" />
    </js-module>
	
    <platform name="android">
    	
	<config-file target="AndroidManifest.xml" parent="/*">
		  <uses-permission android:name="android.permission.INTERNET" />
	</config-file>
    	
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="YunOSOrder">
                <param name="android-package" value="com.yunos.paydemo.activity.MainActivity"/>
            </feature>
        </config-file>
        <source-file src="libs/android-support-v4.jar" target-dir="libs" />
        <source-file src="libs/YunPay.jar" target-dir="libs" />
        <source-file src="src/com/aliyun/pay/order/RSASign.java" target-dir="src/com/aliyun/pay/order/" />
        <source-file src="src/com/aliyun/pay/order/YunOSOrderManager.java" target-dir="src/com/aliyun/pay/order/" />
        <source-file src="src/com/yunos/paydemo/activity/MainActivity.java" target-dir="src/com/yunos/paydemo/activity" />
        <source-file src="src/com/yunos/paydemo/util/CommonUtil.java" target-dir="src/com/yunos/paydemo/util/" />
        <source-file src="src/com/yunos/paydemo/util/Config.java" target-dir="src/com/yunos/paydemo/util/" />
        <source-file src="src/com/yunos/paydemo/util/RSAUtils.java" target-dir="src/com/yunos/paydemo/util/" />
    </platform>

</plugin>
