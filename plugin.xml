<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="tw.com.bais.payO"
    version="1.0">

    <name>Video Player</name>
    <description>Native Video Player Plugin</description>
    <license>pearl</license>
    <keywords>media,video player</keywords>
    <repo>https://github.com/pearl-wu/video_view.git</repo>
    <issue>https://github.com/pearl-wu/video_view.git</issue>

    <js-module src="www/yunospay.js" name="yunospay">
        <clobbers target="yunospay" />
    </js-module>
	
    <platform name="android">
    	
	<config-file target="AndroidManifest.xml" parent="/*">
		  <uses-permission android:name="android.permission.INTERNET" />
	</config-file>
    	
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="YunOSOrder">
                <param name="android-package" value="tw.com.bais.payO.YunOSOrder"/>
            </feature>
        </config-file>
        <source-file src="libs/android-support-v4.jar" target-dir="libs" />
        <source-file src="libs/YunPay.jar" target-dir="libs" />
    </platform>

</plugin>
